    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for typecolab in typecolabs %}
            <tr>
                <td>{{ typecolab.id }}</td>
                <td>{{ typecolab.libelle }}</td>
                <td>
