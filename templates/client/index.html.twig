{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}

     <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Liste des Clients</h1>
        <a href="{{ path('app_client_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm"><i class="fas fa-plus fa-sm text-white-10"></i> Nouveau Client</a>
    </div>

<!-- DataTales Example -->
   <div class="card shadow mb-4">
                        {# <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                        </div> #}
      <div class="card-body">
       <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Code</th>
                <th>RaisonSocial</th>
                <th>Contact</th>
                <th>Titre</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Cel</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
                {# <th>Id</th> #}
                <th>Code</th>
                <th>RaisonSocial</th>
                <th>Contact</th>
                <th>Titre</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Cel</th>
                <th>Email</th>
                <th>actions</th>
        </tfoot>
             {% for client in clients %}
            <tr>
                {# <td>{{ client.id }}</td> #}
                <td>{{ client.code }}</td>
                <td>{{ client.raisonSocial }}</td>
                <td>{{ client.contact }}</td>
                
                {% if( client.titre == "Mademoiselle") %}
                   <td>Mlle</td>
                {% elseif( client.titre == "Madame") %}
                    <td>Mme</td>
                {% elseif( client.titre == "Monsieur") %}
                    <td>Mr</td>
                {% endif %}
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.tel }}</td>
                <td>{{ client.cel }}</td>
                <td>{{ client.email }}</td>
                <td style="width:50px">
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">
                        <i class="fas fa-eye fa-sm text-white-10"> </i>
                    </a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">
                        <i class="fas fa-pencil-alt fa-sm text-white-10"></i>
                    </a>
                    <a href="{{ path('app_client_delete', {'id': client.id}) }}">
                        <i class="fas fa-trash-alt fa-sm text-white-10"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
    </div>
 </div>
</div>



{% endblock %}


{% block javascripts %}

    <!-- Page level plugins -->
    <script src="/bundle/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/bundle/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/bundle/js/demo/datatables-demo.js"></script>
 {% endblock %}
