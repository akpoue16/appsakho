{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>


    <a href="{{ path('app_client_new') }}">Create new</a>

<!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>RaisonSocial</th>
                <th>Contact</th>
                <th>Titre</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Cel</th>
                <th>Email</th>
                <th>Fax</th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
                <th>Id</th>
                <th>Code</th>
                <th>RaisonSocial</th>
                <th>Contact</th>
                <th>Titre</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Cel</th>
                <th>Email</th>
                <th>Fax</th>
                <th>actions</th>
        </tfoot>
             {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.code }}</td>
                <td>{{ client.raisonSocial }}</td>
                <td>{{ client.contact }}</td>
                <td>{{ client.titre }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.tel }}</td>
                <td>{{ client.cel }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.fax }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
    </div>
 </div>
</div>




{% endblock %}


{% block javascripts %}
    <!-- Page level plugins -->
    <script src="/bundle/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/bundle/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/bundle/js/demo/datatables-demo.js"></script>
 {% endblock %}
