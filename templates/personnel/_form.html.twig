{{ form_start(form) }}
<div class="row">
	<div class="col">
		<div class="form-row">
			<div class="col-2">
				{{ form_row(form.titre,{'label': 'Titre', 'attr':{'placeholder':'titre','class':'form-control'}}) }}
			</div>
			<div class="col">
				{{ form_row(form.typePerso,{'label': 'Fonction', 'attr':{'placeholder':'Nom','class':'form-control'}}) }}
			</div>
		</div>
		<div class="form-row">
			<div class="col-4">
				{{ form_row(form.nom,{'label': 'Nom', 'attr':{'placeholder':'Nom','class':'form-control'}}) }}
			</div>
			<div class="col">
				{{ form_row(form.prenom,{'label': 'Prenom', 'attr':{'placeholder':'Prenom','class':'form-control'}}) }}
			</div>
		</div>
		<div class="form-row">
			<div class="col">
				{{ form_row(form.tel,{'label': 'Téléphone 1', 'attr':{'placeholder':'','class':'form-control', 'pattern':'[0-9]{2}[0-9]{2}[0-9]{2}[0-9]{2}[0-9]{2}'}}) }}
			</div>
			<div class="col">
				{{ form_row(form.cel,{'label': 'Téléphone 2', 'attr':{'placeholder':'','class':'form-control', 'pattern':'[0-9]{2}[0-9]{2}[0-9]{2}[0-9]{2}[0-9]{2}'}}) }}
			</div>
			<div class="col-5">
				{{ form_row(form.email,{'label': 'Email', 'attr':{'placeholder':'','class':'form-control'}}) }}
			</div>
		</div>
		<div class="form-row">

			<div class="col">
				{{ form_row(form.image,{'label': ' ', 'attr':{'placeholder':'Selection une photo','class':'form-control'}}) }}
			</div>
		</div>
	</div>
	<div class="col-3">
		<div class="row mb-3">
			<div class="col">
				{% if personnel.image %}

					<img src="/images/{{ personnel.image }}" alt="" class="mw-100 img-thumbnail" id="load_image" data-image="{{ personnel.image }}">
				{% else %}
					<img src="/images/profil.jpg" alt="" class="mw-100 img-thumbnail">
				{% endif %}
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col">
		<a href="{{ path('app_personnel_index') }}" class="btn btn-primary btn-icon-split">
			<span class="icon text-white-10">
				<i class="fas fa-arrow-left fa-sm text-white-10"></i>
			</span>
			<span class="text">Retour à la liste</span>
		</a>
		<button class="btn btn-success btn-icon-split">
			<span class="icon text-white-10">
				<i class="fas fa-save fa-sm text-white-10"></i>
			</span>
			<span class="text">{{ button_label|default('Enregistrer') }}</span>
		</button>
	</div>
</div>
{{ form_end(form) }}
