{% extends 'base.html.twig' %}

{% block title %}TypePerso index
{% endblock %}

{% block body %}
	<h1>TypePerso index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for type_perso in type_persos %}
				<tr>
					<td>{{ type_perso.id }}</td>
					<td>{{ type_perso.nom }}</td>
					<td>
						<a href="{{ path('app_typeperso_show', {'id': type_perso.id}) }}">show</a>
						<a href="{{ path('app_typeperso_edit', {'id': type_perso.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_typeperso_new') }}">Create new</a>
{% endblock %}
