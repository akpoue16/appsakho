<!-- Logout Modal Juridiction-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Ajout Juridiction</h5>
			</div>
			<div class="modal-body"></div>

			<div class="container">

				<form id="formJuridiction" method="post" action="{{ path('app_juridiction_modal') }}">
					<div class="row">
						<div class="col">
							<div class="form-row">
								<div class="col">
									{{ form_row(formJuridiction.titre,{'label': 'Titre', 'attr':{'placeholder':'Titre','class':'form-control'}}) }}
								</div>
							</div>
							<div class="form-row">
								<div class="col">
									{{ form_row(formJuridiction.lieu,{'label': 'Lieu', 'attr':{'placeholder':'Lieu','class':'form-control'}}) }}
								</div>
							</div>
							<div class="form-row">
								<div class="col">
									{{ form_row(formJuridiction.commentaire,{'label': 'Commentaire', 'attr':{'placeholder':'Commentaire','class':'form-control'}}) }}
								</div>
							</div>
						</div>
					</div>

					<div class="modal-footer">
						<button class="btn btn-secondary btn-icon-split" type="button" data-dismiss="modal">
							<span class="icon text-white-10">
								<i class="fas fa-times fa-sm text-white-10"></i>
							</span>
							<span class="text">Annuler</span>

						</button>
						<button class="btn btn-success btn-icon-split" id="envoyer_juridiction">
							<span class="icon text-white-10">
								<i class="fas fa-save fa-sm text-white-10"></i>
							</span>
							<span class="text">Enregistrer</span>
						</button>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>
