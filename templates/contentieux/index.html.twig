{% extends 'base.html.twig' %}

{% block title %}Contentieux index{% endblock %}

{% block body %}

      <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Liste des Affaires</h1>
        <a href="{{ path('app_contentieux_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm"><i class="fas fa-plus fa-sm text-white-10"></i> Nouvelle Affaire</a>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Code</th>
                            <th>CreatedAt</th>
                            <th>Objet</th>
                            <th>Commentaire</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for contentieux in contentieuxes %}
                        <tr>
                            <td>{{ contentieux.id }}</td>
                            <td>{{ contentieux.code }}</td>
                            <td>{{ contentieux.createdAt ? contentieux.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ contentieux.objet }}</td>
                            <td>{{ contentieux.commentaire }}</td>
                            
                            <td>
                                <a href="{{ path('app_contentieux_show', {'id': contentieux.id}) }}">
                                    <i class="fas fa-eye fa-sm text-white-10"> </i>
                                </a>
                                <a href="{{ path('app_contentieux_edit', {'id': contentieux.id}) }}">
                                    <i class="fas fa-pencil-alt fa-sm text-white-10"></i>
                                </a>
                                <a href="{{ path('app_client_delete', {'id': client.id}) }}" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-trash-alt fa-sm text-white-10"></i>
                                </a>
                            
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Pas d'enregistrement</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Confirmation de la suppression</h4>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Etes-vous sûr de vouloir supprimer ce client?</div>
                <div class="modal-footer">
                    <a class="btn btn-danger" href="#">Oui</a>
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
                    
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <!-- Page level plugins -->
    <script src="/bundle/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/bundle/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/bundle/js/demo/datatables-demo.js"></script>
 {% endblock %}