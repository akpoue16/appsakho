{% extends 'base.html.twig' %}

{% block title %}Tribunal{% endblock %}

{% block body %}
     <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Liste des Tribunaux</h1>
        <a href="{{ path('app_tribunal_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm"><i class="fas fa-plus fa-sm text-white-10"></i> Nouveau Tribunal</a>
    </div>

<!-- DataTales Example -->
   <div class="card shadow mb-4">
                        {# <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                        </div>  #}
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tribunal in tribunals %}
            <tr>
                <td>{{ tribunal.id }}</td>
                <td>{{ tribunal.titre }}</td>
                <td>{{ tribunal.commentaire }}</td>
                
                <td>
                    <a href="{{ path('app_tribunal_show', {'id': tribunal.id}) }}">
                        <i class="fas fa-eye fa-sm text-white-10"> </i>
                    </a>
                    <a href="{{ path('app_tribunal_edit', {'id': tribunal.id}) }}">
                        <i class="fas fa-pencil-alt fa-sm text-white-10"></i>
                    </a>
                        {{ include('tribunal/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <!-- Page level plugins -->
    <script src="/bundle/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/bundle/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/bundle/js/demo/datatables-demo.js"></script>


 {% endblock %}
