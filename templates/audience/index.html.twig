{% extends 'base.html.twig' %}

{% block title %}Audience index{% endblock %}

{% block body %}
    <h1>Audience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>CreatedAt</th>
                <th>Conseil</th>
                <th>Motif</th>
                <th>Procedures</th>
                <th>Renvoyer</th>
                <th>NomPresident</th>
                <th>NomGreffier</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for audience in audiences %}
            <tr>
                <td>{{ audience.id }}</td>
                <td>{{ audience.code }}</td>
                <td>{{ audience.createdAt ? audience.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ audience.conseil }}</td>
                <td>{{ audience.motif }}</td>
                <td>{{ audience.procedures }}</td>
                <td>{{ audience.renvoyer ? audience.renvoyer|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ audience.nomPresident }}</td>
                <td>{{ audience.nomGreffier }}</td>
                <td>
                    <a href="{{ path('app_audience_show', {'id': audience.id}) }}">show</a>
                    <a href="{{ path('app_audience_edit', {'id': audience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_audience_new') }}">Create new</a>
{% endblock %}
