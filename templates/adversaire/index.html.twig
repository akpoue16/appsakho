{% extends 'base.html.twig' %}

{% block title %}Adversaire index{% endblock %}

{% block body %}
      <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Liste des Adversaires</h1>
        <a href="{{ path('app_adversaire_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm"><i class="fas fa-plus fa-sm text-white-10"></i> Nouveau Adversaire</a>
    </div>

<!-- DataTales Example -->
   <div class="card shadow mb-4">
                        {# <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                        </div>  #}
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Code</th>
                <th>RaisonSocieal</th>
                <th>Contact</th>
                <th>Titre</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>Cel</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adversaire in adversaires %}
            <tr>
                {# <td>{{ adversaire.id }}</td> #}
                <td>{{ adversaire.code }}</td>
                <td>{{ adversaire.raisonSocieal }}</td>
                <td>{{ adversaire.contact }}</td>
                <td>{{ adversaire.titre }}</td>
                <td>{{ adversaire.nom }}</td>
                <td>{{ adversaire.prenom }}</td>
                <td>{{ adversaire.tel }}</td>
                <td>{{ adversaire.cel }}</td>
                <td>{{ adversaire.email }}</td>
                
                <td>
                    <a href="{{ path('app_adversaire_show', {'id': adversaire.id}) }}">
                         <i class="fas fa-eye fa-sm text-white-10"> </i>
                    </a>
                    <a href="{{ path('app_adversaire_edit', {'id': adversaire.id}) }}">
                        <i class="fas fa-pencil-alt fa-sm text-white-10"></i>
                    </a>
                         {{ include('adversaire/_delete_form.html.twig') }}
