{{ form_start(form) }}
<div class="row">
	<div class="col">
		<div class="form-row">
			<div class="col">
				{{ form_row(form.nom,{'label': 'Nom du dossier', 'attr':{'placeholder':' ','class':'form-control'}}) }}
			</div>
			<div class="col-4">
				{{ form_row(form.code,{'label': 'N° du dossier', 'attr':{'placeholder':' ','class':'form-control'}}) }}
			</div>
		</div>
		<div class="form-row">

			<div class="col">
				{{ form_row(form.client,{'label': 'Client', 'attr':{'placeholder':'','class':'form-control'}}) }}
			</div>
			<div class="col">
				{{ form_row(form.personnel,{'label': 'Responsable du dossier', 'attr':{'placeholder':'','class':'form-control'}}) }}
			</div>
		</div>

		<div class="form-row">
			<div class="col">
				{{ form_row(form.createdAt,{'label': 'Date d\'ouverture', 'attr':{'placeholder':'','class':'form-control'}}) }}
                </div>
                <div class="col">
                    {{ form_row(form.updateAt,{'label': 'Date de fermeture', 'attr':{'placeholder':'','class':'form-control'}}) }}
                </div>
            </div>
            <div class="form-row">
                
                <div class="col">
                    {{ form_row(form.commentaire,{'label': 'Commentaire ', 'attr':{'placeholder':'','class':'form-control'}}) }}
                </div>
            </div>
            
        </div>
</div>
    <div class="row">
        <div class="col">
            <a href="{{ path('app_dossier_index') }}" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-10">
                    <i class="fas fa-arrow-left fa-sm text-white-10"></i>
                </span>
                <span class="text">Retour à la liste</span>
            </a>
            <button class="btn btn-success btn-icon-split">
                <span class="icon text-white-10">
                    <i class="fas fa-save fa-sm text-white-10"></i>
                </span>
                <span class="text">{{ button_label|default('Enregistrer') }}</span>
            </button>
        </div>
    </div>
{{ form_end(form) }}
